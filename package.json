{
  "name": "simple-vtt",
  "version": "1.0.0",
  "description": "A lightweight Virtual Table Top application for tabletop RPG games",
  "main": "dist/server/server/index.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "tsc -p tsconfig.client.json",
    "start": "node dist/server/server/index.js",
    "dev": "npm run build && npm start"
  },
  "dependencies": {
    "express": "^4.18.2",
    "uuid": "^9.0.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.6",
    "@types/ws": "^8.5.10",
    "typescript": "^5.5.3"
  },
  "private": true
}
